void MUL_ND_N() //Умножение натурального числа на цифру
{
	int n, c;
	cout << "Введите натуральное число, которое будет умножаться" << endl;
	cin >> n;
	if (n <= 0) cout << "Число не является натуральным" << endl;
	else
	{
		cout << "Введите цифру, на которую будет умножаться число" << endl;
		cin >> c;
		if ((c <= 0) || (c >= 9)) cout << "Введенное значение не является цифрой" << endl;
		else
		{
			n = n * c;
			cout << "Результат: " << n << endl;
		}
	}
}
