#pragma once
void SUB_QQ_Q()//Сложение дробей
{
	int* c1, * c2, * c3, * c4;
	int n;//его уберете это пока чтобы было понятно.Потом оно появится из функции на НОК
	cout << "Введите числители дробей.Они должены быть целыми числами." << endl;
	cin >> *c1 >> *c2;
	cout << "Введите знаменатели дробей.Они должены быть натуральными числами." << endl;
	cin >> *c3 >> *c4;
	if ((*c3 <= 0) || (*c4 <= 0))
		cout << "Ошибка при вводе чисел в знаменатель" << endl;
	else {
		LCM_NN_N(*c3, *c4);//ищем общее кратное знаменателя(пусть эта функция вернула некоторое число n)
		MUL_ZZ_Z(*c1, n);//домноженный числитель первой дроби
		MUL_ZZ_Z(*c2, n);//домноженный числитель второй дроби
		MUL_ZZ_Z(*c3, n);//общий знаменатель
		SUB_ZZ_Z(*c1, *c2);//разность числителей
		cout << "Полученная дробь: " << *c1 << endl;//числитель
		cout << "                  _" << endl;
		cout << "                  " << *c3 << endl;//знаменатель
	}