#include <iostream>
#include <math.h>
using namespace std;

int n, n1, n2, x, c, k;

void COM_NN_D() //сравнение двух натуральных чисел
{
	cout << "Введите два натуральных числа" << endl;
	cin >> n1;	
	if (n1 <= 0) cout << "Число " << n1 << " не является натуральным";		//проверка на натуральность первого числа
	else 
	{
		cin >> n2;
		if (n2 <= 0) cout << "Число " << n2 << " не является натуральным";	//проверка на натуральность второго числа
		else
		{
			if (n1 > n2)
			{
				x = 2;
				cout << x << " - первое число больше второго" << endl;
			}
			if (n1 == n2)
			{
				x = 0;
				cout << x << " - первое число равно второму" << endl;
			}
			if (n1 < n2)
			{ 
				x = 1; 
				cout << x << " - второе число больше первого" << endl;
			}
		}
	}
}

void NZER_N_B() //проверка на ноль
{
	cout << "Введите натуральное число" << endl;
	cin >> n1;
	if (n1 == 0) cout << "Да";
	else cout << "Нет";
}

void ADD_1N_N() //Добавление 1 к натуральному числу
{
	cout << "Введите натуральное число" << endl;
	cin >> n1;
	if (n1 <= 0) cout << "Число " << n1 << " не является натуральным";		//проверка на натуральность первого числа
	else
	{
		n1++;
		cout << n1;
	}
}

void ADD_NN_N() //Сложение двух натуральных чисел
{
	COM_NN_D();
	n = n1 + n2;
	cout << n;
}

void SUB_NN_N() //Вычитание из первого большего натурального числа второго меньшего или равного
{
	COM_NN_D();
	if (x == 1) n = n2 - n1;
	else
		n = n1 - n2;
	cout << n;
}

void MUL_ND_N() //Умножение натурального числа на цифру
{
	cout << "Введите натуральное число, которое будет умножаться" << endl;
	cin >> n1;
	if (n1 <= 0) cout << "Число не является натуральным" << endl;
	else
	{
		cout << "Введите цифру, на которую будет умножаться число" << endl;
		cin >> c;
		if ((c <= 0) || (c >= 9)) cout << "Введенное значение не является цифрой" << endl;
		else
		{
			n1 = n1 * c;
			cout << "Результат: " << n1 << endl;
		}
	}
}

void MUL_Nk_N()//Умножение натурального числа на 10^k
{
	cout << "Введите натуральное число, которое будет умножаться" << endl;
	cin >> n1;
	if (n1 <= 0) cout << "Число не является натуральным" << endl;
	else
	{
		cout << "Введите число, в степень которой будет возводиться 10" << endl;
		cin >> k;
		n1 = n1 * (pow(10,k));
		cout << "Результат: " << n1 << endl;
	}
}

void MUL_NN_N()//Умножение натуральных чисел
{
		int ccc;
	cout << "1)Умножение натурального числа на другое натуральное число \n2)Умножение натурального числа на 10^k\n3)Умножение натурального числа на цифру" << endl;
	cin >> ccc;
	switch (ccc)
	{
	case 1:
		cout << "Введите два натуральных числа" << endl;
		cin >> n1;
		if (n1 <= 0) cout << "Число " << n1 << " не является натуральным";		//проверка на натуральность первого числа
		else
		{
			cin >> n2;
			if (n2 <= 0) cout << "Число " << n2 << " не является натуральным";	//проверка на натуральность второго числа
			else
			{
				n = n1 * n2;
			}
			cout << "Результат: " << n << endl;
		}
		break;
	case 2:
		MUL_Nk_N();
		break;
	case 3:
		MUL_ND_N();
		break;
	}
}

void SUB_NDN_N()//Вычитание из натурального другого натурального, умноженного на цифру для случая с неотрицательным результатом
{

}

int main()
{
	int ccc;
	setlocale(LC_ALL, "Russian");
	cout << "1)Сравнение натуральных чисел \n2)Проверка на ноль \n3)Добавление 1 к натуральному числу \n4)Сложение натуральных чисел\n5)Вычитание из первого большего натурального числа второго меньшего или равного\n6)Умножение натурального числа на цифру\n7)Умножение натурального числа на 10^k\n8)Умножение натуральных чисел\n9)Вычитание из натурального другого натурального, умноженного на цифру для случая с неотрицательным результатом" << endl;
	cin >> ccc;
	switch (ccc)
	{
	case 1:
		COM_NN_D();
		break;
	case 2:
		NZER_N_B();
		break;
	case 3:
		ADD_1N_N();
		break;
	case 4:
		ADD_NN_N();
		break;
	case 5:
		SUB_NN_N();
		break;
	case 6:
		MUL_ND_N();
		break;
	case 7:
		MUL_Nk_N();
		break;
	case 8:
		MUL_NN_N();
		break;
	case 9:
		SUB_NDN_N();
		break;
	}
	cout << endl << "Работа программы завершена";
}
